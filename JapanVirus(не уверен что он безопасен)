@echo off
echo 警告: 重要なコンポーネントを本当に破壊しますか？
echo それらはドライバーとシステム ファイルになります。
set /p choice="選択してください (はい=1 / いいえ=2): "

if %choice%==1 (
    echo 重要なファイルとライブラリを「クリーンアップ」します。
    echo 1 ライブラリをクリーンアップします
    echo 2 ウィザードを閉じます
    echo 3 重要なシステム ファイルを削除します
    set /p action="選択してください (1, 2, 3): "
    if %action%==1 echo ライブラリをクリーンアップ中... (デモ用)
    if %action%==2 echo ウィザードを終了します。
    if %action%==3 echo システムファイルを削除中... (デモ用)
) else (
    echo 操作をキャンセルしました。
)
pause
