@echo off
echo Внимание: Вы действительно хотите уничтожить важные компоненты?
echo Это будут драйверы и системные файлы.
set /p choice="Выберите (да=1 / нет=2): "

if %choice%==1 (
    echo Очищаем важные файлы и библиотеки.
    echo 1 Очищаем библиотеки.
    echo 2 Закрываем мастер установки.
    echo 3 Удаляем важные системные файлы.
    set /p action="Выберите действие (1, 2, 3): "
    if %action%==1 echo Очищаем библиотеки... (для демонстрации)
    if %action%==2 echo Закрываем мастер установки.
    if %action%==3 echo Удаляем системные файлы... (для демонстрации)
) else (
    echo Операция отменена.
)
pause
